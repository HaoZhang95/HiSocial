<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@color/grey_10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_event"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/spacing_large"
                        app:srcCompat="@drawable/ic_add_a_photo" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large">

                    <!--top line-->

                    <LinearLayout
                        android:layout_width="@dimen/spacing_xlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_10" />

                    </LinearLayout>

                    <!--section title-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/step_title"
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:background="@drawable/shape_round_solid"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_10"
                                android:minHeight="?attr/actionBarSize" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_label_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/spacing_small"
                                android:paddingRight="@dimen/spacing_small"
                                android:text="@string/title"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90" />

                            <LinearLayout
                                android:id="@+id/lyt_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/et_title"
                                    android:text="title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/event_title_hint" />

                                <Button
                                    android:id="@+id/bt_continue_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:textAllCaps="false"
                                    android:text="@string/continue_step"
                                    android:theme="@style/Button.Primary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--section description-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/step_description"
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:background="@drawable/shape_round_solid"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_10" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_label_description"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/spacing_small"
                                android:paddingRight="@dimen/spacing_small"
                                android:text="@string/desc"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90" />

                            <LinearLayout
                                android:id="@+id/lyt_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/et_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:text="desc"
                                    android:hint="@string/event_description_hint"
                                    android:lines="4" />

                                <Button
                                    android:id="@+id/bt_continue_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:textAllCaps="false"
                                    android:text="@string/continue_step"
                                    android:theme="@style/Button.Primary"  />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--section time-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/step_time"
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:background="@drawable/shape_round_solid"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_10" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_label_time"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/spacing_small"
                                android:paddingRight="@dimen/spacing_small"
                                android:text="@string/start_end_time"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90" />

                            <LinearLayout
                                android:id="@+id/lyt_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/spacing_large"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_start_time"
                                        android:layout_width="0dp"
                                        android:layout_weight="10"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:text="00:00"
                                        android:textSize="48sp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                                        android:textColor="@color/grey_60" />

                                    <TextView
                                        android:id="@+id/tv_end_time"
                                        android:layout_width="0dp"
                                        android:layout_weight="10"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:textSize="48sp"
                                        android:text="00:00"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                                        android:textColor="@color/grey_60" />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/bt_continue_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:textAllCaps="false"
                                    android:text="@string/continue_step"
                                    android:theme="@style/Button.Primary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--section date-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/step_date"
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:background="@drawable/shape_round_solid"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_10" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_label_date"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/spacing_small"
                                android:paddingRight="@dimen/spacing_small"
                                android:text="@string/date"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90" />

                            <LinearLayout
                                android:id="@+id/lyt_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:text="01 Jan 2000"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="@color/grey_60" />

                                <Button
                                    android:id="@+id/bt_continue_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:textAllCaps="false"
                                    android:text="@string/continue_step"
                                    android:theme="@style/Button.Primary"  />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--section location-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/step_location"
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:background="@drawable/shape_round_solid"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_10" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_label_location"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/spacing_small"
                                android:paddingRight="@dimen/spacing_small"
                                android:text="@string/location"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90" />

                            <LinearLayout
                                android:id="@+id/lyt_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:orientation="vertical">


                                <com.google.android.flexbox.FlexboxLayout
                                    android:id="@+id/flex_box"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:padding="@dimen/spacing_large"
                                    app:flexWrap="wrap"
                                    app:justifyContent="center">

                                    <Button
                                        android:id="@+id/btn_locationA"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_rounded_outline"
                                        android:text="Kamppi, Annankatu 30 "
                                        android:textAllCaps="false"
                                        android:textColor="@color/blue_500" />

                                    <Button
                                        android:id="@+id/btn_locationB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_rounded_outline"
                                        android:text="Kluuvi Mikonkatu 17c"
                                        android:textAllCaps="false"
                                        android:textColor="@color/blue_500" />

                                    <Button
                                        android:id="@+id/btn_locationC"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_rounded_outline"
                                        android:text="Vartiokylä, Turunlinnantie 1"
                                        android:textAllCaps="false"
                                        android:textColor="@color/blue_500" />

                                </com.google.android.flexbox.FlexboxLayout>

                                

                                <Button
                                    android:id="@+id/bt_continue_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:textAllCaps="false"
                                    android:text="@string/continue_step"
                                    android:theme="@style/Button.Primary"  />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <!--section confirmation-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/step_confirmation"
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:background="@drawable/shape_round_solid"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_10" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_label_confirmation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/spacing_small"
                                android:paddingRight="@dimen/spacing_small"
                                android:text="@string/confirmation"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90" />

                            <LinearLayout
                                android:id="@+id/lyt_confirmation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/bt_add_event"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:textAllCaps="false"
                                    android:text="@string/add_event"
                                    android:theme="@style/Button.Primary" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                    <!--bottom line-->

                    <LinearLayout
                        android:layout_width="@dimen/spacing_xlarge"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_10" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_smlarge"
            android:clickable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:layout_anchor="@id/lyt_form"
            app:layout_anchorGravity="top|end|right"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_photo_camera" />

    </android.support.design.widget.CoordinatorLayout>

    <!--bottom sheet container-->
    <FrameLayout
        android:id="@+id/bottom_sheet_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior" />

</android.support.design.widget.CoordinatorLayout>
